@using Antemis.Models;
@using Antemis.Repositories;

@model WorkerModel
@{
	Layout = "_HotelLayout";
}

<link rel="stylesheet" href="~/css/standart-style.css" />
<link rel="stylesheet" href="~/css/hotel-pages/add-job-style.css" />


<form class="m-container standart-container" asp-controller="HotelPage" asp-action="AddWorker">

	<div style="display: flex; flex-direction: column; margin-left: 60px;">
		<div>
			<label asp-for="Id">Должность: </label>
			<select style="margin-bottom: 10px;" class="input-box" asp-for="Id">
				@{
					var works = HotelsRepository.GetJobsList();
					
				}
				@foreach (var w in works)
				{
					<option value="@w.Workid">@w.Workname</option>
				}
			</select>
			<span class="error" asp-validation-for="Id"></span>
		</div>

		<div>
			<label asp-for="INN">ИНН: </label>
			<input style="margin-bottom: 10px;" class="input-box" asp-for="INN" />
			<span class="error" asp-validation-for="INN"></span>
		</div>

		<div>
			<label asp-for="Surname">Фамилия: </label>
			<input style="margin-bottom: 10px;" class="input-box" asp-for="Surname" />
			<span class="error" asp-validation-for="Surname"></span>
		</div>

		<div>
			<label asp-for="Name">Имя: </label>
			<input style="margin-bottom: 10px;" class="input-box" asp-for="Name" />
			<span class="error" asp-validation-for="Name"></span>
		</div>

		<div>
			<label asp-for="Patronimic">Отчество: </label>
			<input style="margin-bottom: 10px;" class="input-box" asp-for="Patronimic" />
			<span class="error" asp-validation-for="Patronimic"></span>
		</div>

		<div>
			<label asp-for="Gender">Пол: </label>
			<select style="margin-bottom: 10px;" class="input-box" asp-for="Gender">
				<option value="m">Мужской</option>
				<option value="f">Женский</option>
			</select>
			<span class="error" asp-validation-for="Gender"></span>
		</div>

		<div>
			<label asp-for="Birth">Дата рождения: </label>
			<input style="margin-bottom: 10px;" type="date" class="input-box" asp-for="Birth" />
			<span class="error" asp-validation-for="Birth"></span>
		</div>

	</div>
	<p style="margin-left: 60px;" class="">Выберите аватарку:</p>
	<div class="image-selector">
		<div class="image-line">
			<img class="img1 img" src="~/images/usericons/img1.png" alt="Alternate Text" />
			<img class="img2 img" src="~/images/usericons/img2.png" alt="Alternate Text" />
			<img class="img3 img" src="~/images/usericons/img3.png" alt="Alternate Text" />
			<img class="img7 img" src="~/images/usericons/img7.png" alt="Alternate Text" />
			<img class="img8 img" src="~/images/usericons/img8.png" alt="Alternate Text" />
			<img class="img9 img" src="~/images/usericons/img9.png" alt="Alternate Text" />
		</div>
		
		<div class="image-line">
			<img class="img4 img" src="~/images/usericons/img4.png" alt="Alternate Text" />
			<img class="img5 img" src="~/images/usericons/img5.png" alt="Alternate Text" />
			<img class="img6 img" src="~/images/usericons/img6.png" alt="Alternate Text" />
			<img class="img10 img" src="~/images/usericons/img10.png" alt="Alternate Text" />
			<img class="img11 img" src="~/images/usericons/img11.png" alt="Alternate Text" />
			<img class="img12 img" src="~/images/usericons/img12.png" alt="Alternate Text" />
		</div>
	</div>
	<input id="imgField" style="display: none;" asp-for="Img" value="img1" />

	<button style="align-self: center; margin-top: 10px; padding: 2px; width: 100px;" type="submit">Добавить сотрудника</button>

</form>

<script>
	let images = document.getElementsByClassName('img');
	let last = images[0];
	let field = document.getElementById('imgField');
	for (let i = 0; i < images.length; i++) {
		images[i].onclick = () => {
			last.style.borderColor = 'transparent';
			images[i].style.borderColor = 'black';
			field.value = images[i].classList[0];
			last = images[i];
		}
	}
</script>
